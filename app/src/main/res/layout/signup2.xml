<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EFF0FC"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="874dp"
        android:layout_height="163dp"
        android:scaleType="fitXY"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/top_background2" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="910dp"
        android:layout_height="83dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="32dp"
        android:gravity="center"
        android:text="Créer Votre Profil"
        android:textColor="#6672FF"
        android:textSize="40sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/imageView2"
        app:layout_constraintHorizontal_bias="0.296"
        app:layout_constraintStart_toStartOf="@+id/imageView2"
        app:layout_constraintTop_toBottomOf="@+id/imageView2" />

    <EditText
        android:id="@+id/age"
        android:layout_width="528dp"
        android:layout_height="65dp"
        android:layout_margin="32dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/edittext_background"

        android:drawablePadding="16dp"
        android:ems="10"
        android:hint="Votre Age"
        android:inputType="text"
        android:textAlignment="center"
        android:textColorHint="#3B608C"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        tools:ignore="MissingConstraints,UnknownIdInLayout" />

    <EditText
        android:id="@+id/taille"
        android:layout_width="520dp"
        android:layout_height="78dp"
        android:layout_margin="32dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/edittext_background"

        android:drawablePadding="16dp"
        android:ems="10"
        android:hint="Votre Taille en cm"
        android:inputType="text"
        android:textAlignment="center"
        android:textColorHint="#3B608C"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/age"
        tools:ignore="MissingConstraints,UnknownIdInLayout" />

    <EditText
        android:id="@+id/poids"
        android:layout_width="534dp"
        android:layout_height="75dp"
        android:layout_margin="32dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/edittext_background"

        android:drawablePadding="16dp"
        android:ems="10"
        android:hint="Votre poids en Kg"
        android:inputType="text"
        android:textAlignment="center"
        android:textColorHint="#3B608C"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/taille"
        tools:ignore="MissingConstraints,UnknownIdInLayout" />

    <EditText
        android:id="@+id/sexe"
        android:layout_width="532dp"
        android:layout_height="73dp"
        android:layout_margin="32dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/edittext_background"

        android:drawablePadding="16dp"
        android:ems="10"
        android:hint="Votre sexe ♂ ou ♀"
        android:inputType="text"
        android:textAlignment="center"
        android:textColorHint="#3B608C"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/poids"
        tools:ignore="MissingConstraints,UnknownIdInLayout" />

    <ImageView
        android:id="@+id/next"
        android:layout_width="60dp"
        android:layout_height="62dp"
        android:layout_marginTop="32dp"


        android:layout_marginEnd="68dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sexe"
        app:srcCompat="@drawable/btn_arraw1"
        tools:ignore="MissingConstraints" />


</androidx.constraintlayout.widget.ConstraintLayout>